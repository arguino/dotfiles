###########################
# xbindkeys configuration #
###########################
# Increase volume
"amixer -q set Master 2+"
   XF86AudioRaiseVolume

# Lower volume
"amixer -q set Master 2-"
   XF86AudioLowerVolume

# Mute volume
"amixer -q set Master toggle"
   XF86AudioMute

# Player Control
"playerctl play-pause"
   XF86AudioPlay

"playerctl previous"
    XF86AudioPrev

"playerctl next"
    XF86AudioNext

"light -A 5"
    XF86MonBrightnessUp

"light -U 5"
    XF86MonBrightnessDown

##################################
# End of xbindkeys configuration #
##################################
